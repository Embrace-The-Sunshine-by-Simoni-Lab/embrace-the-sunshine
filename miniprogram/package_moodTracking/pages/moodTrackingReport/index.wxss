/* ================ podcast scroll ================ */
.pdRecommend_container {
  width: 92%;
  position: relative;
  top: -20rpx;
}

.pdRecommend_header{
  color: #4D50A4;
  font-size: 34rpx;
}

.scrollPd_container {
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
  justify-content: space-between;
}

.scrollable_pd {
  margin-top: 40rpx;
  margin-right: 30rpx;
  height: 220rpx;
  width: 220rpx;
  position: relative;
  border-radius: 8px;
  box-shadow: 0px 3px 5px  rgba(0, 0, 0, 0.2);
}

.pd_title {
  font-size: 30rpx;
  padding-left: 14rpx;
  padding-top: 6rpx;
  position: absolute;
}

