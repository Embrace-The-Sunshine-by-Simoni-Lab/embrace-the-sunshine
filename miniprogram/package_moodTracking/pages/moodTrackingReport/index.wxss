/* ============== Line Chart Heading ============= */
.line_chart_heading {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  margin-bottom: 20rpx;
}

.btnBox {
  position: relative;
  display: flex;
  bottom: 2rpx;
}

.line_chart_title_container {
  margin-right: 46rpx;
}

.title_text {
  font-size: 34rpx;
  color: #4D50A4;
}

/* ============ Line Chart Body = y_axis + uchart  ================*/
.line_chart_body {
  display: flex;
  margin-top: 5rpx;
}

.line_chart_y_axis {
  width: 9%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.line_chart_y_axis_label {
  color: hsl(0, 0%, 48%);
  font-size: 14px;
  /* padding: 9.2px 0; */
}

#label_1 {
  margin-top: 34rpx;
}
#label_2 {
  margin-top: 29rpx;
}
#label_3 {
  margin-top: 19rpx;
}
#label_4 {
  margin-top: 17rpx;
}
#label_5 {
  margin-top: 15rpx;
}
.line_chart {
  width: 90%
}
.charts {
  width: 600rpx;
  height: 440rpx;
}
/* 进度条 */
.slide{
  height:30rpx;
  padding:7rpx 0 5rpx 0;
  overflow: hidden;
}
.slide .slide-bar{
 width: 690rpx;
 margin: 0 auto;
 height: 3px;
 background:#DCD6F7;
}
.slide .slide-bar .slide-show{
 height:100%;
 background-color:#4D50A4;
}
