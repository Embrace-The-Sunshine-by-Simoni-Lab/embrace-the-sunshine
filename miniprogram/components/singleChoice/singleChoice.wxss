  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ContentTitle {
  margin-bottom: 14rpx;
}
.ContentDetails {
  display: flex;
  flex-direction: column;
  font-weight: 300;
}
.ContentDetail {
  padding: 5rpx 0;
}

.ContentChunk {
  display: flex;
  flex-direction: column;
  margin-bottom: 14rpx;
}
.correctAnswer {
  background: rgba(9, 187, 7, 0.2) !important;
  border: 2px solid #09BB07 !important;
}
.wrongAnswer {
  background: rgba(230, 67, 64, 0.2) !important;
  border: 2px solid #E64340 !important;
}
.leftArea {
  width: 100%;
  /* background: green; */
}
.rightArea {
  width: 100%;
  /* background: green; */
}
.submitBox {
  width: 100%;
  /* background: green; */
  height: 30px;
  display: flex;
  justify-content: center;
}
.quizfinshimg {
  width: 240rpx;
  height: 360rpx;
}
.completeNotice {
  padding: 5rpx 0;
