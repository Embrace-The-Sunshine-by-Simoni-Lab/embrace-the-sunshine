  font-weight: 300;
  font-size: 27rpx;
  /* background: orange; */
}
.optionContent {
  /* background: orange; */
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.optionDetail {
  background: #FFFFFF;
  height: 60rpx;
  width: 380rpx;
  border-radius: 7rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid #BDBDBD;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.option {
  padding-left: 20rpx;
}
.prevButton {
  width: 50rpx;
