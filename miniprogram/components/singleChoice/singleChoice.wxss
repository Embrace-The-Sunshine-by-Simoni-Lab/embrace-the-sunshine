/* components/singleChoice/singleChoice.wxss */
.quiz {
  background: #FDFBFC;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
}
.ContentContainer {
  overflow-y: scroll;
  width: 100%;
  height: 80%;
  position: relative
}
.ContentChunk {
  display: flex;
  flex-direction: column;
  margin-bottom: 14rpx;
}
.selection {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.contentOpt {
  /* background: #c8a7f2; */
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.quizHeader {
  font-size: 34rpx;
  padding-bottom: 14rpx;
}
.bar {
  width: 100%;
  height: 5px;
  background: #E0E0E0;
  border-radius: 20rpx;
}
.mode_active {
  background: #F38A73;
}
.noticeBox {
  font-weight: 300;
  width: 100%;
  /* height: 100rpx; */
  /* background: orange; */
