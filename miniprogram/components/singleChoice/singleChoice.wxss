}

.buttonDisabled {
  background: #F2F2F2 !important;
  color: #7e8185 !important;
}
.submit {
  margin-top: 20rpx;
  background: #4D50A4;
  font-size: 13px;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 7rpx;
  width: 270rpx;
}
.quizQuestion {
  font-weight: 300;
  margin-bottom: 20rpx;
  height: 60rpx;
  width: 100%;
  font-size: 14px;
