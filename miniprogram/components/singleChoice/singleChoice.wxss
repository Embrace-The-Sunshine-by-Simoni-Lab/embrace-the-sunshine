}
.optionContainer {
  /* background: blue; */
  height: 340rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
.checkMark {
  width: 30rpx;
  height: 24rpx;
  padding-right: 20rpx;
  /* background: green; */
}
.tempBox {
  width: 80rpx;
  height: 80rpx;
}
.option_active {
  background: #DCD6F7 !important;
}
.prev {
  margin-top: -100rpx;
  width: 80rpx;
  height: 80rpx;
}
.questionBox {
  display: flex;
