/* components/singleChoice/singleChoice.wxss */
.quiz {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.ContentContainer {
  overflow-y: scroll;
  width: 100%;
  position: relative
}
.ContentChunk {
  display: flex;
  flex-direction: column;
  margin-bottom: 14rpx;
}
.selection {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.contentOpt {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.quizHeader {
  font-size: 34rpx;
  padding-bottom: 14rpx;
}
.bar {
  width: 100%;
  height: 5px;
  background: #E0E0E0;
  border-radius: 20rpx;
}
.mode_active {
  background: #F38A73;
}
.first_level {
  font-weight: 500;
  font-size: 32rpx;
  line-height: 24px;
}
.second_level {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 200%;
}
.third_level {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 200%;
}

.QuestionBlock {
  display: flex;
  flex-direction: column;
}
.QuestionOrder {
  font-size: 35rpx;
  line-height: 50rpx;
}
.QuestionContent {
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  color: #7B7B7B;
}
.OptionBlock {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Option {
  background: #FFFFFF;
  border: 1px solid #BDBDBD;
  border-radius: 4px;
  padding-left: 20rpx;
  width: 450rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  line-height: 70rpx;
}
.SubmitBlock {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
  align-items: center;
}
.Submit_Button {
  width: 400rpx;
  height: 65rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #4D50A4;
  border-radius: 4px;
  text-align: center;
}
.Disabled_Button {
  width: 400rpx;
  height: 65rpx;
  color: rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 70rpx;
  background: #F2F2F2;
  border-radius: 4px;
  text-align: center;
}
.next_question {
  width: 60rpx; 
  height: 55rpx;
}
.prev_question {
  width: 60rpx; 
  height: 55rpx;
  transform: scaleX(-1);
}