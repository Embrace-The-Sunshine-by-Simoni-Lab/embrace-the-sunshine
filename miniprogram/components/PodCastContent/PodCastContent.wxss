}
.open_ended_box {
  width: 100%;
  /* height: 200rpx; */
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* background: orange; */
}
.open_ended_question {
  background: white;
  border: 1.5px solid #6568BC;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 5px;
  width: 100%;
  height: 360rpx;
  /* background: green; */
}
.open_ended_question_meditation {
  background: white;
  border: 1.5px solid #6568BC;
  box-sizing: border-box;
