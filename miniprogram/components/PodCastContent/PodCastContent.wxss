/* components/singleChoice/singleChoice.wxss */
.quiz {
  box-sizing: border-box;
  padding: 28rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FDFBFC;
  padding-top: 0;
}
.selection {
  width: 100%;
  display: flex;
  background: #FDFBFC;
  justify-content: space-between;
  height: 10%;
}
.ContentContainer {
  position: relative;
  width: 100%;
  background: #FDFBFC;
  /* height: 100vh;  */
  padding-top: 20rpx;
  height: 90%;
  overflow-y: scroll; 
}
.QuizContainer {
  position: relative;
  /* background: #FDFBFC; */
  width: 100%;
  /* background: orange; */
  /* overflow-y: scroll; */
  height: 90%;
}
.QuizContainer_inner {
  width: 100%;
  height: 90%;
  /* background: rgb(125, 119, 202); */
}
.Quiz_finish_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.meditation_transit {
  color: #6568BC;
  text-decoration: underline;
  display: flex;
  align-items: center;
}
.meditation_img {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
}
.Quiz_finish_image {
  width: 330rpx;
  height: 400rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.Quiz_finish_continue {
  margin-bottom: 20rpx;
}
.Quiz_finish_check_answer_button {
  width: 300rpx;
  height: 65rpx;
  text-align: center;
  line-height: 65rpx;
  background: #4D50A4;
  border-radius: 9px;
  color: #FFFFFF;
}
.QuestionBlock {
  padding-top: 20rpx;
  /* background: rgb(64, 211, 199); */
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 16%;
}
.ContentChunk {
  display: flex;
  flex-direction: column;
}
.AnswerBlock {
  height: 80%;
  overflow-y: scroll;
  /* background: rgb(79, 98, 211); */
}
 /*.SingleAnswerBlock {
  background:rgb(109, 182, 49) 
}*/

.contentOpt {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background: rgb(28, 163, 46); */
}
.podcast_meditation_img {
  width: 470rpx;
  height: 370rpx;
  margin-top: 20rpx;
  margin-bottom: 60rpx;
  /* background: green; */
}
.podcast_meditation_content_container {
  display: flex;
  width: 100%;
  height: 100%; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background: green; */
}
.SubmitBlock_meditation {
  background: green;
  width: 100%;
  height: 100%;
}
.quizHeader {
  font-size: 34rpx;
  padding-bottom: 14rpx;
}
.bar {
  /* width: 100%; */
  width: 100%;
  height: 10rpx;
  background: #E0E0E0;
  border-radius: 20rpx;
}
.mode_active {
  background: #F38A73;
}
.first_level {
  font-weight: 500;
  font-size: 30rpx;
  line-height: 24px;
  margin-bottom: 25rpx;
  color: #2E317D;
}
.second_level {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 200%;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.third_level {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 200%;
  margin-left: 40rpx;
}

.QuestionOrder {
  font-size: 32rpx;
  line-height: 50rpx;
}
.QuestionContent {
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  color: #7B7B7B;
}
.OptionBlock {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Option {
  background: #FFFFFF;
  border: 1px solid #BDBDBD;
  border-radius: 4px;
  padding-left: 20rpx;
  width: 450rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  line-height: 70rpx;
}
.fill-bottom-gap-box {
  width: 680rpx;
  height: 50rpx;
  background: rgb(139, 139, 161);
}
.SubmitBlock {
  background: white;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  margin-left: -340rpx;
  width: 680rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}
.Submit_Button {
  width: 200rpx;
  height: 70rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #4D50A4;
  border-radius: 4px;
  text-align: center;
}
.Disabled_Button {
  width: 200rpx;
  height: 70rpx;
  color: rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 70rpx;
  background: #F2F2F2;
  border-radius: 4px;
  text-align: center;
}
.meditation_disable_button {
  width: 350rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: rgba(0, 0, 0, 0.1);
  background: #F2F2F2;
  border-radius: 8px;
  text-align: center;
  margin-top: 70rpx;
}
