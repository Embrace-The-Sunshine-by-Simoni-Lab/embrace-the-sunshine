/* components/singleChoice/singleChoice.wxss */
.quiz {
  box-sizing: border-box;
  padding: 17rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FDFBFC;
}
.selection {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: #e0cad5;
  height: 10%;
  /* background: rgb(218, 64, 218); */
}
.ContentContainer {
  position: relative;
  width: 100%;
  background: #FDFBFC;
  /* height: 100vh;  */
  height: 85%;
  overflow-y: scroll; 
}
.QuizContainer {
  position: relative;
  /* background: #FDFBFC; */
  width: 100%;
  background: orange;
  /* overflow-y: scroll; */
  height: 85%;
}
.QuestionBlock {
  padding-top: 20rpx;
  background: rgb(64, 211, 199);
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 16%;
}
.ContentChunk {
  display: flex;
  flex-direction: column;
}
.AnswerBlock {
  height: 10%;
  overflow-y: scroll;
  background: rgb(79, 98, 211);
}
.SingleAnswerBlock {
  background:rgb(109, 182, 49)
}
.contentOpt {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgb(28, 163, 46);
}
.podcast_meditation_img {
  width: 450rpx;
  height: 340rpx;
  margin-top: 20rpx;
  margin-bottom: 60rpx;
}
.podcast_meditation_content_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.quizHeader {
  font-size: 34rpx;
  padding-bottom: 14rpx;
}
.bar {
  /* width: 100%; */
  width: 90%;
  height: 20rpx;
  background: #E0E0E0;
  border-radius: 20rpx;
}
.mode_active {
  background: #F38A73;
}
.first_level {
  font-weight: 500;
  font-size: 30rpx;
  line-height: 24px;
  margin-bottom: 5rpx;
}
.second_level {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 200%;
}
.third_level {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 200%;
}

.QuestionOrder {
  font-size: 32rpx;
  line-height: 50rpx;
}
.QuestionContent {
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  color: #7B7B7B;
}
.OptionBlock {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Option {
  background: #FFFFFF;
  border: 1px solid #BDBDBD;
  border-radius: 4px;
  padding-left: 20rpx;
  width: 450rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  line-height: 70rpx;
}
.fill-bottom-gap-box {
  width: 680rpx;
  height: 50rpx;
  background: rgb(139, 139, 161);
}
.SubmitBlock {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -340rpx;
  background: green;
  width: 680rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.Submit_Button {
  width: 400rpx;
  height: 65rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #4D50A4;
  border-radius: 4px;
  text-align: center;
}
.Disabled_Button {
  width: 400rpx;
  height: 65rpx;
  color: rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 70rpx;
  background: #F2F2F2;
  border-radius: 4px;
  text-align: center;
}
.next_question {
  width: 60rpx; 
  height: 55rpx;
}
.prev_question {
  width: 60rpx; 
  height: 55rpx;
  transform: scaleX(-1);
}
.open_ended_box {
  width: 100%;
  /* height: 200rpx; */
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* background: orange; */
}
.open_ended_question {
  background: white;
  border: 1.5px solid #6568BC;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 5px;
  width: 100%;
  height: 360rpx;
  /* background: green; */
}
.meditation_submit {
  width: 350rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #FFFFFF;
  background: #4D50A4;
  border-radius: 8px;
  text-align: center;
  margin-top: 70rpx;
}