/* components/playAudio.wxss */
.podcastPlayContainer {
  /* background: green; */
  height: 100%; 
  width: 100%;
}
.headerContainer {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  height: 65%;
}
.playButtonContainer {
  /* height: 160rpx; */
  position: relative; 
  height: 35%;
  width: 100%;
}

.podcastHeader {
  height: 70%;
  width: 100%;
}

.curve {
  position: absolute; 
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
}

.podcast_img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 20rpx;
}
.podcast_star {
  width: 100rpx;
  height: 100rpx;
  /* background: green; */
}
.headerImage {
  width: 38%;
  height: 86%;
  padding-left: 40rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: rgb(201, 62, 92); */
}
.headerTitle {
  font-size: 38rpx;
  margin-bottom: 14rpx;
}
.headerContentBox {
  display: flex;
  justify-content: space-between;
  /* background: yellow; */
}
.headerDetail {
  font-size: 26rpx;
  /* background: orange; */
}
.headerMark {
  width: 110rpx;
  height: 110rpx;
  /* padding-left: 50rpx;
  padding-right: 30rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  /* background: blue; */
}
.headerDate {
  font-size: 30rpx;
  margin-bottom: 7rpx;
}
.headerContent {
  width: 70%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
  /* background: grey; */
  /* background: rgb(143, 18, 95); */
}
.podcastHeader {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 67%;
}
.slider {
  /* padding-top: 17rpx; */
  width: 100%;
  height: 15%;
}
.timing {
  width: 95%;
  height: 18%;
  display: flex;
  justify-content: space-between;
  /* background: orange; */
  box-sizing: border-box;
  padding: 0 30rpx;
}
.back10Button {
  width: 60rpx;
  height: 60rpx;
  margin-right: -25rpx;
  position: absolute;
  left: 20%;
  bottom: 52%;
  z-index: 100;
}
.up10Button {
  width: 60rpx;
  height: 60rpx;
  margin-left: -25rpx;
  position: absolute;
  left: 75%;
  bottom: 52%;
  z-index: 100;
}
.mainPlayButton {
  width: 190rpx;
  height:190rpx;
  position: absolute;
  left: 50%;
  margin-left: -95rpx;
  bottom: 15%;
  z-index: 99;
}
.timingDetail {
  font-size: 25rpx;
  padding-top: 10rpx;
}
.prevButton {
  width: 40rpx;
  height: 40rpx;
  /* margin-left: -30rpx; */
  position: absolute;
  right: 85%;
  bottom: 30%;
  z-index: 200;
}
.nextButton {
  width: 40rpx;
  height: 40rpx;
  /* margin-left: -30rpx; */
  position: absolute;
  left: 85%;
  bottom: 30%;
  z-index: 200;
}

.next {
  margin-top: -100rpx;
  width: 80rpx;
  height: 80rpx;
  /* background: green;  */
}

.prev {
  margin-top: -100rpx;
  width: 80rpx;
  height: 80rpx;
  transform: scaleX(-1);
}
