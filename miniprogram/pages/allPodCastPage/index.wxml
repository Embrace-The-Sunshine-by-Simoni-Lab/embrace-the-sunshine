<!--pages/allPodCastPage/index.wxml-->
<view class="allCastsContainer">
  <text class="allCastHeader">全部播客</text>

  <view class="castList">
    <!-- 渲染单个卡片 -->
    <view class="castItem" wx:for="{{podCastInfo}}" wx:for-item="item" wx:for-index="idx" wx:key="idx" wx:if="{{idx < 3}}" bind:tap="jumpToPodCast" data-index="{{idx}}">
      <view class="castImage">
        <image class="castImageItem" src="{{item.imageUrl}}"></image>
      </view>
      <view class="castContent">
        <text>{{item.mainTitle}}</text>
        <text class="castContentDetails">{{item.mainContentSummary}}</text> 
      </view>
    </view>


  </view>
</view> 
