/* pages/allPodCastPage/index.wxss */
.allCastHeader {
  font-size: 20px;
  font-weight: 400;
  margin-bottom: 15px;
}
.allCastsContainer {
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  /* background: orange; */
}
.castList {
  /* background: green; */
  width: 100%;
  height: 100%;
}
.castItem {
  height: 170rpx;
  border-radius: 10px;
  background: #FDFBFC;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  display: flex;
  align-items: center;
  padding: 0 1rpx;
  margin-bottom: 18rpx;
}
.castImage {
  width: 100px;
  height: 80px;
  padding: 0 10rpx;
}
.castImageItem {
  width: 100%;
  height: 100%;
}
.castContent {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 170px;
  height: 80px;
}
.castContentDetails {
  font-size: 13px;
  padding: 12px 0;
  color: #666666
}