/* pages/allPodCastPage/index.wxss */
.allCastHeader {
  font-size: 20px;
  font-weight: 400;
  margin-bottom: 15px;
}
.allCastsContainer {
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  /* background: orange; */
}
.castList {
  /* background: green; */
  width: 100%;
  height: 100%;
}
.castItem {
  height: 95px;
  border-radius: 10px;
  background: #FDFBFC;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 5px;
  margin-bottom: 15px;
}
.castImage {
  /* background: orange; */
  width: 100px;
  height: 80px;
}
.castContent {
  /* background: blue; */
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  box-sizing: border-box;
  padding: 5px 0;
  width: 170px;
  height: 80px;
}
.castButton {
  /* background: green; */
  width: 45px;
  height: 80px;
}
.castImageItem {
  width: 100%;
  height: 100%;
}
.castContentDetails {
  font-size: 13px;
  padding: 12px 0;
  color: #666666
}
.castProgress {
  width: 98%;
  height: 7px;
  border-radius: 14px;
  background: #DADADA;
}
.castButton {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.castPlayButton {
  width: 35px;
  height: 35px;
  margin-bottom: 10px;
}
.castTimer {
  font-size: 10px;
  padding-bottom: 2px;
}