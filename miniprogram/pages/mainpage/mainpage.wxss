.container {
  display: flex;
  flex-direction: column;
  padding: 1.5rem;
  height: 100vh;
}

.title {
  /* font-size: 0.8rem; */
}

.small_moduel_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 1.4rem;
}

.small_module {
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  border-radius: .7rem;
  width: 40%;
  height: 5rem;
  box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.06);
  padding: 0.7rem;
  position: relative;
}
.smallImg1 {
  position: absolute;
  height: 88%;
  width: 80%;
  right: 5%;
  bottom: 0;
}

.smallImg2 {
  position: absolute;
  height: 80% ;
  width: 80%;
  right: 2%;
  bottom: 0;
}

.small_module .medImage {
  width: 120%;
  margin-right: -24%;
  margin-bottom: -5%;
}

.big_moduel_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.big_moledule {
  padding: 0.7rem;
  margin-bottom: 0.7rem;
  background-color: #FFFFFF ;
  box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.06);
  border-radius: .7rem;
  height: 30%;
  position: relative;
}
.bigImg1 {
  position: absolute;
  height: 95% !important;
  width: 84%;
  right: 5%;
  bottom: 0;
}
.bigImg2 {
  position: absolute;
  height: 98% !important;
  width:88%;
  right: 5%;
  bottom: 0;
}
.bigImg3 {
  position: absolute;
  height: 105% !important;
  width:88%;
  right: 7%;
  bottom: 0;
}