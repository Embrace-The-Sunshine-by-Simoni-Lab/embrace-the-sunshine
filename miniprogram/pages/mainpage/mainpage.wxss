.moledule {
  position: relative;
  margin-top: 3.0rem;
  margin-bottom: 2.5rem;
  border-radius: .5rem;
  width: 90%;
  transition: 250ms;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.moledule:hover {
  transform: scale(1.03);
}

#moledule-one {
  background-color: #eeeeee;
}

#moledule-two {
  background-color: #72bffa;
}

#moledule-three {
  background-color: #fc672d;
}

.check-circle {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border-style: solid;
  border-width: 2px;
  border-color: black;
  margin-bottom: 70px;
  margin-right: 4%;
}

.check-circle, .title, .length {
  margin-top: 10px;
  margin-left: 10px;
}