/* pages/podcastPlay/index.wxss */
Page{
  background:white !important;
}
.podcastContainer {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  /* background: yellow; */
}
.headerContainer {
  display: flex;
  height: 28%;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  /* background: green; */
}
.gap {
  height: 2%;
}
.podcastHeader {
  /* background: blue; */
  height: 70%;
}

.curve {
  position: absolute; 
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60%;
}
.quiz {
  /* background: green; */
  height: 52%; 
  box-sizing: border-box;
  padding: 40rpx;
}
.podcast_img {
  width: 230rpx;
  height: 230rpx;
  border-radius: 20rpx;
}
.podcast_star {
  width: 50rpx;
  height: 50rpx;
}
.headerImage {
  width: 38%;
  height: 86%;
  padding-left: 40rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  /* align-items: flex-end; */
  /* background: orange; */
}
.headerTitle {
  font-size: 38rpx;
  margin-bottom: 14rpx;
}
.headerContentBox {
  display: flex;

}
.headerDetail {
  font-size: 26rpx;
}
.headerMark {
  width: 90rpx;
  height: 90rpx;
  padding-left: 50rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background: blue; */
}
.headerDate {
  font-size: 30rpx;
  margin-bottom: 7rpx;
}
.headerContent {
  width: 70%;
  height: 86%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
  /* background: grey; */
}
.podcastHeader {
  display: flex;
  justify-content: center;
  align-items: center;
}
.playButton {
  height: 14%;
  position: relative; 
}
.back30Button {
  width: 60rpx;
  height: 60rpx;
  margin-right: -30rpx;
  position: absolute;
  left: 20%;
  bottom: 38%;
}
.mainPlayButton {
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  left: 50%;
  margin-left: -105rpx;
  bottom: 5%;
  z-index: 99;
}
.forward30Button {
  width: 60rpx;
  height: 60rpx;
  margin-left: -30rpx;
  position: absolute;
  left: 75%;
  bottom: 38%;
}
.slider {
  padding-top: 20rpx;
  /* background: yellow; */
  width: 95%;
  height: 15%;
}
.timing {
  width: 95%;
  height: 18%;
  display: flex;
  justify-content: space-between;
  /* background: orange; */
  box-sizing: border-box;
  padding: 0 30rpx;
}
.timingDetail {
  font-size: 25rpx;
  padding-top: 10rpx;
}
.prevButton {
  width: 40rpx;
  height: 40rpx;
  /* margin-left: -30rpx; */
  position: absolute;
  right: 85%;
  bottom: 30%;
}
.nextButton {
  width: 40rpx;
  height: 40rpx;
  /* margin-left: -30rpx; */
  position: absolute;
  left: 85%;
  bottom: 30%;
}
.selection {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.quizHeader {
  font-size: 34rpx;
  padding-bottom: 14rpx;
}

.contentOpt {
  /* background: #c8a7f2; */
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bar {
  width: 100%;
  height: 5px;
  background: #E0E0E0;
  border-radius: 20rpx;
}
.mode_active {
  background: #F38A73;
}
.quizContent {
  display: flex;
  flex-direction: column;
  width: 100%;
  /* background: yellow;  */
}
.quizIndicator {
  height: 60rpx;
  width: 100%;
  /* background: orange;  */
}
.quizQuestion {
  font-weight: 300;
  margin-bottom: 20rpx;
  height: 60rpx;
  width: 100%;
  /* background: purple; */
}
.quizHeaderSpaceBox {
  background: yellow;
  width: 100%;
  height: 120rpx;
}
.quizOptions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-weight: 300;
  font-size: 27rpx;
  /* background: orange; */
}
.optionContent {
  /* background: orange; */
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.optionDetail {
  background: #FFFFFF;
  height: 60rpx;
  width: 380rpx;
  border-radius: 7rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid #BDBDBD;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.option {
  padding-left: 20rpx;
}
.submit {
  margin-top: 20rpx;
  background: #4D50A4;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 7rpx;
  width: 270rpx;
}
.buttonDisabled {
  background: #F2F2F2;
  color: #7e8185;
}
.next {
  margin-top: -100rpx;
  width: 80rpx;
  height: 80rpx;
  /* background: green;  */
}
.option_active {
  background-color: #DCD6F7;
}
.checkMark {
  width: 30rpx;
  height: 24rpx;
  padding-right: 20rpx;
  /* background: green; */
}
.tempBox {
  width: 80rpx;
  height: 80rpx;
}
.prev {
  margin-top: -100rpx;
  width: 80rpx;
  height: 80rpx;
  transform: scaleX(-1);
}
.optionContainer {
  /* background: blue; */
  height: 340rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
.quizfinshimg {
  width: 240rpx;
  height: 360rpx;
}
.completeNotice {
  padding: 5rpx 0;
  font-size: 26rpx;
}
.completeContainer {
  /* background: green; */
  width: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.noticeBox {
  font-weight: 300;
  width: 100%;
  /* height: 100rpx; */
  /* background: orange; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ContentContainer {
  overflow-y: scroll;
  width: 100%;
  height: 80%;
}
.ContentChunk {
  display: flex;
  flex-direction: column;
  margin-bottom: 14rpx;
}
.ContentTitle {
  margin-bottom: 14rpx;
}
.ContentDetails {
  display: flex;
  flex-direction: column;
  font-weight: 300;
}
.ContentDetail {
  padding: 5rpx 0;
}

.correctAnswer {
  background: rgba(9, 187, 7, 0.2);
  border: 2px solid #09BB07;
}
.wrongAnswer {
  background: rgba(230, 67, 64, 0.2);
  border: 2px solid #E64340;
}
.leftArea {
  width: 100%;
  /* background: green; */
}
.rightArea {
  width: 100%;
  /* background: green; */
}
.submitBox {
  width: 100%;
  /* background: green; */
  height: 30px;
  display: flex;
  justify-content: center;
}