/* pages/podcastPlay/index.wxss */
Page{
  background:white !important;
}
.podcastContainer {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  /* background: yellow; */
}
.headerContainer {
  display: flex;
  height: 28%;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  /* background: green; */
}
.gap {
  height: 2%;
}
.podcastHeader {
  /* background: blue; */
  height: 70%;
}

.curve {
  position: absolute; 
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60%;
}

.podcast_img {
  width: 230rpx;
  height: 230rpx;
  border-radius: 20rpx;
}
.podcast_star {
  width: 50rpx;
  height: 50rpx;
}
.headerImage {
  width: 38%;
  height: 86%;
  padding-left: 40rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  /* align-items: flex-end; */
  /* background: orange; */
}
.headerTitle {
  font-size: 38rpx;
  margin-bottom: 14rpx;
}
.headerContentBox {
  display: flex;

}
.headerDetail {
  font-size: 26rpx;
}
.headerMark {
  width: 90rpx;
  height: 90rpx;
  padding-left: 50rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background: blue; */
}
.headerDate {
  font-size: 30rpx;
  margin-bottom: 7rpx;
}
.headerContent {
  width: 70%;
  height: 86%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
  /* background: grey; */
}
.podcastHeader {
  display: flex;
  justify-content: center;
  align-items: center;
}
.playButton {
  height: 14%;
  position: relative; 
}
.back30Button {
  width: 60rpx;
  height: 60rpx;
  margin-right: -30rpx;
  position: absolute;
  left: 20%;
  bottom: 38%;
}
.mainPlayButton {
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  left: 50%;
  margin-left: -105rpx;
  bottom: 5%;
  z-index: 99;
}
.forward30Button {
  width: 60rpx;
  height: 60rpx;
  margin-left: -30rpx;
  position: absolute;
  left: 75%;
  bottom: 38%;
}
.slider {
  padding-top: 20rpx;
  /* background: yellow; */
  width: 95%;
  height: 15%;
}
.timing {
  width: 95%;
  height: 18%;
  display: flex;
  justify-content: space-between;
  /* background: orange; */
  box-sizing: border-box;
  padding: 0 30rpx;
}
.timingDetail {
  font-size: 25rpx;
  padding-top: 10rpx;
}







