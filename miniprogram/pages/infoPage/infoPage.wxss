.pageContainer {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F6F6F6;
}

.headerTabs{
  display: flex;
  padding-left: 40rpx;
  padding-top: 40rpx;
  position: relative;
  bottom: 2rpx;
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
}

.scroll-view-item {
  display: inline-block;
  height: 70rpx;
  margin-right: 30rpx;
  position: relative;
  top: 6rpx;
}

.content {
  background-color: #ffffff;
  height: 9500rpx;
  margin-top: 5%;
  padding-right: 5%;
  padding-left: 5%;
  padding-top: 7%;
  border-radius: 40px 40px 0px 0px;
  box-shadow: 0 10px 20px 2px #cecece;
}

.listItem {
  width: 100%;
  height: 100%;
  border-bottom: 1px solid lightgrey;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.itemDetail view {
  margin-bottom: 9rpx;
}

.itemTitle {
  font-size: 32rpx;
}

.itemAbstract {
  font-size: 30rpx;
  color: grey;
}

.itemMediaType {
  font-size: 28rpx;
  color: grey;
}