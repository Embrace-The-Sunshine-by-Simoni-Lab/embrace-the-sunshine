/* pages/infoPage/infoPage.wxss */
.background {
  background-color: #F6F6F6;
}

.content {
  background-color: #ffffff;
  margin-top: 3%;
  /* margin-left: 8%;
  margin-right: 8%; */
  padding-right: 11%;
  padding-left: 11%;
  padding-top: 8%;
  padding-bottom: 5%;
  border-radius: 40px;
  box-shadow: 0 10px 20px 2px #cecece;
}

.content > .title {
  padding-bottom: 1%;
}

.content > .sub_title {
  padding-top: 3%;
}

.content > .text {
  line-height: 25px;
  color: #888888;
  font-size: 15px;
}

.title {
  font-size: 25px;
  font-weight: 500;
  line-height: 30px;
  margin-bottom: 5px;
  letter-spacing: 0px;
}

.sub_title {
  margin-top: 20px;
  line-height: 30px;
  font-weight: bold;
  font-size: 20px;
  color: #1C6DCD;
}

.icon {
  width: 30px;
  height: 30px;
  margin-right: 50 px;

}

.icon_box {
  margin-right: 50 px;
  width: 30px;
}

.icon_bar {
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  padding-top: 10px;
  padding-bottom: 10px;
  width: 70%;
}