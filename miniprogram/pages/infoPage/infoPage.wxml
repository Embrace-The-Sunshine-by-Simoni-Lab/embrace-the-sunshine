<!--pages/infoPage/infoPage.wxml-->
<view class="pageContainer">
  <view class="headerTabs">
    <scroll-view class="scroll-view" scroll-x="true" bindscroll="scroll">
      <view class="scroll-view-item" wx:for="{{infoTypeList}}" wx:for-item="item" wx:for-index="idx" wx:key="idx">
        <view><mainButton type="{{true? 'type-fill' : 'type-empty'}}" class="madicineBtn" bindtap="chooseType" infoType="{{item.type}}"></mainButton></view>
      </view>
    </scroll-view>
  </view>
  <view class="content"> 
    <view class="listContainer">
      <view class="listItem" 
        wx:for="{{infoList}}"
        wx:for-item="item" 
        wx:for-index="idx" 
        wx:key="name">
        <view class="itemDetail" data-id="{{item.name}}" bind:tap="jumpToDetailPage">
          <view class="itemTitle">{{item.name}}</view>
          <view class="itemAbstract">{{item.abstract}}</view> 
          <view class="itemMediaType">{{item.mediaType}}{{item.fee? " | " + item.fee  : ""}}</view>
        </view>
      </view>
    </view>
  </view>
</view> 