/* pages/profile/profile.wxss */
.container {
  padding-top: 80rpx;
  display: flex;
  flex-direction: column; 
  background-color: rgb(255, 255, 255);
  width: 100%;
  margin: 0 auto;
}

.greeting {
  font-size: large;
}

.text-container {
  padding-bottom: 20rpx;
  text-align: center;
}

.row_display {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 85%;
  height: 10rem;
}

.buttonList-container {
  display: flex;
  flex-direction: row;
  width: 85%;
  margin: 0 auto;
}

.button-container-vertical {
  display: flex;
  flex-direction: column;
  width: 220rpx;
  height: 200rpx;
  align-items:center;
  text-align: center;
}

.summary-board {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 390rpx;
  background: rgb(245, 245, 245);
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px 2px #cdcfcf;
  padding: 36rpx;
}

.name_container {
  display: flex;
  flex-flow: row wrap;
  width: 185px;
  text-align: center;
  margin: auto
}

.name_input {
  border-radius: 5px;
  border: 2px solid lightgray;
}

.name_submit {
  color: white;
  background-color: #7BB32E;
}
