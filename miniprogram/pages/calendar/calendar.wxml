<view class="container-fluid">
  <view class="title">
    <view class="row">
      <view class="column"></view>
      <view class="column"><image class="img" src="../../images/calendar/Calendar Option-1.png"/></view>
      <view class="column"><image class="img" src="../../images/calendar/Tracking Option.png"/></view>
      <view class="column"></view>
    </view>
    <view class="dateBox">
      <text id="title-month">{{str}}</text>
      <text>\n</text>
      <text id="title-date">{{day}}</text>
      <text>\n</text>
    </view>
    <text id="title-weekday">{{weekday}}</text>
    <!-- <text>\n</text>
    <text>\n</text>
    <text id="title-year">{{year}}</text> -->
  </view>
  <view class="demo5">
      <calendar 
      weeks-type="cn" 
      cell-size="40" 
      cell-color="#59518d"
      next="{{true}}" prev="{{true}}" show-more-days="{{true}}"
      calendar-style="demo5-calendar" 
      header-style="demo5-header" 
      board-style="demo5-bord" 
      days-color="{{demo5_days_style}}" 
      binddayClick="dayClick"
      active-type="round"
      />
  </view>
  <view wx:if="{{!is_completed}}">
      <button class="submit-btn" bindtap="onClick" hover-class="btn-hover">
          我今天已完成用药
      </button> 
  </view>
  <view wx:else>
      <button class="submit-btn"  hover-class="btn-hover" type="default" disabled="{{true}}">
          今日用药已完成
      </button> 
  </view>
</view>