  padding: 15px;
}

.demo5-calendar {
  background-color: white;
  padding-top: 10px;
  border-radius: 10px;
}

.demo5-header {
  font-size: large;
  color: #59518d;    
}

.demo5-board {
  color: #c7cbe2;
  font-weight: bold;
}

